{
  "name": "nest-starter",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/leshachaplin/session-based-auth.git"
  },
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.19.0"
  },
  "scripts": {
    "pm2": "pm2",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "serve": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn build && yarn pm2:start:prod",
    "pm2:start:prod": "pm2 startOrRestart ./pm2/production.json",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "knex": "knex --knexfile knexfile.ts",
    "migrate": "npm run knex migrate:latest",
    "migrate:make": "npm run knex migrate:make -- -x ts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "6.11.11",
    "@nestjs/core": "6.11.11",
    "@nestjs/jwt": "6.1.2",
    "@nestjs/passport": "6.2.0",
    "@nestjs/platform-express": "6.11.11",
    "@nestjs/swagger": "^4.5.11",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "connect-redis": "^4.0.4",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "express-session": "^1.17.1",
    "helmet": "^3.23.2",
    "knex": "^0.21.1",
    "mysql": "^2.18.1",
    "objection": "^2.2.0",
    "objection-timestamps": "^4.0.0",
    "objection-visibility": "^1.0.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.2",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "6.9.4",
    "@nestjs/testing": "6.11.11",
    "@types/express": "4.17.2",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^17.1.2",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "pm2": "^4.4.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "lint-staged": {
    "!(*test).ts": [
      "yarn run lint --max-warnings=0",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
